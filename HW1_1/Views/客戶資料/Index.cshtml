@model IEnumerable<HW1_1.Models.客戶資料>

@{
    ViewBag.Title = "客戶資料";
    //Layout = "~/Views/Shared/_Layout_Metro.cshtml";
}
@section breadcrumb {
    <li><a href="@Url.Action("Index")">客戶資料</a></li>
}

<h2>新增客戶資料</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "客戶資料", FormMethod.Get))
    {
        <input type="search" name="keyword" placeholder="請輸入關鍵字" value="" />
    }
</p>
<a href="@Url.Action("ExFile()")">匯出資料</a>

    @*@using PagedList
    @using PagedList.Mvc

    @Html.PagedListPager(Model as IPagedList, p => Url.Action("Index", new { keyword = ViewBag.keyword, pageNo = p }))*@


<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+客戶名稱", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.客戶名稱)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-客戶名稱", keyword = ViewBag.keyword})">↓</a>

        </th>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+統一編號", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.統一編號)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-統一編號", keyword = ViewBag.keyword})">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+電話", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.電話)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-電話", keyword = ViewBag.keyword})">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+傳真", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.傳真)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-傳真", keyword = ViewBag.keyword})">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+地址", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.地址)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-地址", keyword = ViewBag.keyword})">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index","客戶資料",new { sortBy="+.Email", keyword = ViewBag.keyword})">↑</a>
            @Html.DisplayNameFor(model => model.Email)
            <a href="@Url.Action("Index","客戶資料",new { sortBy="-.Email", keyword = ViewBag.keyword})">↓</a>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
